<%- layout('/layouts/boilerplate.ejs') %>

<div class="row mt-3">
    <h2 class="col-6 offset-3 mb-3">SignUp on Wanderlust</h2>
    <div class="col-6 offset-3">
        <form action="/signup" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-lable">Username</label>
                <input type="text" id="useranme"  name="username" placeholder="Please Add Your Username" class="form-control" required>
                <div class="valid-feedback">
                   Looks good!
                </div>
            </div>

            <div class="mb-3">
                <label for="email" class="form-lable">Email</label>
                <input type="email" id="email"  name="email" placeholder="Please Add Your Email ID" class="form-control" required >
            </div>

            <div class="mb-3">
                <label for="password" class="form-lable">password</label>
                <input type="password" id="password"  name="password" placeholder="Please Add Your password" class="form-control" required >
            </div>
            <button class="btn btn-success">SignUp</button>
        </form>
    </div>
</div>